<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teacher_attendance_secondary"
    tools:context="com.mobilesutra.SMS_Lohit.activities.Activity_Staff_Attendance">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:minHeight="@dimen/toolbar_height" />

    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:visibility="gone" />


    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/linear_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_school_name_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teacher_attendance_background"
            android:gravity="center"
            android:singleLine="true"
            android:text="GOVT.PRY.SCHOOL, KANJANG"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/toolbar"
            android:background="@color/teacher_attendance_background"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Staff Attendance (कर्मचारी उपस्थिति)"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_current_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_2"
                android:gravity="center"
                android:text="Monday 27 March 2017, 9.00 AM"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/list_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_above="@+id/btn_submit"
        android:layout_below="@+id/linear_heading"
        android:padding="@dimen/dp_5" />

    <View
        android:id="@+id/action_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:visibility="gone"
        android:layout_above="@+id/btn_submit"
        android:background="@color/white" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/btn_capsul_background_green"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20sp"
        android:textStyle="normal" />

</RelativeLayout>
