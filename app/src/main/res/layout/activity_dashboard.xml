<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Dashboard">

   <!-- <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize" />-->

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_teacher_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@color/red" />

        <TextView
            android:id="@+id/txt_teacher_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/dp_10"
            android:text="Mr. ABC, Head Master, Kendriya Vidyalaya"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_teacher_info"
        android:padding="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/card_staff_attendance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/login_bottom_img" />

                <TextView
                    android:id="@+id/txt_teacher_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:text="Staff Attendance"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_28sp"
                    android:textStyle="bold|italic" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_student_attendance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_below="@+id/card_staff_attendance"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/login_bottom_img" />

                <TextView
                    android:id="@+id/txt_student_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:text="Students Daily Attendance"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_28sp"
                    android:textStyle="bold|italic" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_examination_attendance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_below="@+id/card_student_attendance"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/login_bottom_img" />

                <TextView
                    android:id="@+id/txt_examination_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:text="Examination Attendance"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_28sp"
                    android:textStyle="bold|italic" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_meal_report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_below="@+id/card_examination_attendance"
                android:layout_marginTop="@dimen/dp_10"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/login_bottom_img" />

                <TextView
                    android:id="@+id/txt_meal_report"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:text="Mid Day Meal Report"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_28sp"
                    android:textStyle="bold|italic" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_updates"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_below="@+id/card_meal_report"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/login_bottom_img"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/dp_10"
                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/login_bottom_img" />

                <TextView
                    android:id="@+id/txt_updates"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:text="Updates and Notices"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_28sp"
                    android:textStyle="bold|italic" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
