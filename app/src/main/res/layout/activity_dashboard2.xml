            <ImageView
                android:id="@+id/img_school"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/view_toolbar"
                android:scaleType="fitXY"
                android:src="@drawable/school_img1" />

            <TextView
                android:id="@+id/txt_school_name_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="GOVT.PRY.SCHOOL, KANJANG"
                android:textColor="@color/red"
                android:textSize="@dimen/text_18sp"
                android:textStyle="normal" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_teacher_attendance"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/view"
                android:layout_marginTop="@dimen/dp_5"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/dp_10">

                <LinearLayout
                    android:id="@+id/linear_teacher_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/teacher_attendance_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_staff"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:src="@drawable/staff_attendance_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_teacher_attendance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="Teacher's Attendance"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_24sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/txt_teacher_attendance_hindi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="(अध्यापक उपस्थिति)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_18sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_students_attendance"
                android:layout_width="match_parent"
                android:layout_height="100dp"
