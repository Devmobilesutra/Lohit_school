                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="@string/upload_events"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_24sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/txt_upload_hindi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="@string/upload_events_hindi"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_18sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/view"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/dp_10">

                <LinearLayout
                    android:id="@+id/linear_leave_application"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/leave_application_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:src="@drawable/leave_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_leave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="@string/leave_application"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_24sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/txt_leave_hindi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="(छुट्टी अर्जी)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_18sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

