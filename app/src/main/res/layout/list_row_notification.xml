<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardview_first_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/daily_updates_secondary"
    android:elevation="@dimen/dp_10"
    card_view:cardCornerRadius="@dimen/dp_8">

    <LinearLayout
        android:background="@color/daily_updates_secondary"
        android:orientation="vertical"
        android:padding="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_title"
            android:text="Hello Title"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_notification_text"
            android:text="Hello Title"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14sp"
            android:autoLink="all"
            android:textColorLink="@color/daily_updates_background"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </android.support.v7.widget.CardView>